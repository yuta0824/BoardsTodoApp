.w-full.max-w-sm.mx-auto.overflow-hidden.bg-white.rounded-lg.shadow-md
  .px-6.py-4
    %h3.mt-3.text-xl.font-medium.text-center.text-brandGray Sign up

    = render 'devise/shared/error_messages', resource: resource

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .w-full.mt-4
        = f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: 'Your Name', "aria-label": 'Your Name', class: 'input'

      .w-full.mt-4
        = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', "aria-label": 'Email Address', class: 'input'

      .w-full.mt-4
        = f.password_field :password, autocomplete: 'new-password', placeholder: "Password #{@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : ''}", "aria-label": 'Password', class: 'input'

      .w-full.mt-4
        = f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirm Password', "aria-label": 'Confirm Password', class: 'input'

      .flex.items-center.justify-center.mt-4
        = f.submit 'Sign Up', class: 'submit'

  .flex.items-center.justify-center.py-4.text-center.bg-brandGrayLight
    %span.text-sm.text-brandGray Already have an account?
    = link_to 'Sign In', new_session_path(resource_name), class: 'mx-2 text-sm text-link text-brandBlack hover:underline'
