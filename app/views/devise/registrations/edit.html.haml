%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.file_field :avatar
  .field
    = f.text_field :name, autocomplete: "name"
  .actions
    = f.submit "Update"
%h3 Delete account
= button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete
= link_to "Back", :root
