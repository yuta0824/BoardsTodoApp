.w-full.max-w-sm.mx-auto.overflow-hidden.bg-white.rounded-lg.shadow-md
  .px-6.py-4
    %h3.mt-3.text-xl.font-medium.text-center.text-gray-600 Sign up

    = render 'devise/shared/error_messages', resource: resource

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .w-full.mt-4
        = f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: 'Your Name', "aria-label": 'Your Name', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300'

      .w-full.mt-4
        = f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', "aria-label": 'Email Address', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300'

      .w-full.mt-4
        = f.password_field :password, autocomplete: 'new-password', placeholder: "Password #{@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : ''}", "aria-label": 'Password', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300'

      .w-full.mt-4
        = f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirm Password', "aria-label": 'Confirm Password', class: 'block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg focus:border-blue-400-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300'

      .flex.items-center.justify-center.mt-4
        = f.submit 'Sign Up', class: 'px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50'

  .flex.items-center.justify-center.py-4.text-center.bg-gray-50
    %span.text-sm.text-gray-600 Already have an account?
    = link_to 'Sign In', new_session_path(resource_name), class: 'mx-2 text-sm font-bold text-blue-500 hover:underline'
