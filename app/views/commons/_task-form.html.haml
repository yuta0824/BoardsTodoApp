= form_with(model: [board, task], local: true, data: { turbo: false }) do |f|
  .w-full.mt-4
    %label{ for: 'task_thumbnail', class: 'block text-sm text-brandGray' }
      Thumbnail
    = f.file_field :thumbnail, class: 'block w-full px-3 py-2 mt-2 text-sm text-brandGray bg-white border border-brandGray rounded-lg file:bg-brandGrayLight file:text-brandBlack file:text-sm file:px-4 file:py-1 file:border-none file:rounded-full placeholder-brandGray/70 focus:border-brandGray focus:outline-none focus:ring focus:ring-brandGray focus:ring-opacity-40'
  .w-full.mt-4
    %label{ for: 'task_name', class: 'w-fit cursor-pointer block text-sm text-brandGray' }
      Name
    = f.text_field :name, class: 'block mt-2 w-full placeholder-brandGray/70 rounded-lg border border-brandGray bg-white px-5 py-2.5 text-brandBlack focus:border-brandGray focus:outline-none focus:ring focus:ring-brandGray focus:ring-opacity-40'
  .w-full.mt-4
    %label{ for: 'task_description', class: 'w-fit cursor-pointer block text-sm text-brandGray' }
      Description
    = f.text_area :description, class: 'block mt-2 w-full placeholder-brandGray/70 rounded-lg border border-brandGray bg-white px-5 py-2.5 text-brandBlack focus:border-brandGray focus:outline-none focus:ring focus:ring-brandGray focus:ring-opacity-40'
  .w-full.mt-4
    %label{ for: 'task_due_date', class: 'w-fit cursor-pointer block text-sm text-brandGray' }
      Due Date
    = f.date_field :due_date, class: 'block mt-2 w-full placeholder-brandGray/70 rounded-lg border border-brandGray bg-white px-5 py-2.5 text-brandBlack focus:border-brandGray focus:outline-none focus:ring focus:ring-brandGray focus:ring-opacity-40'
  .flex.items-center.justify-center.mt-4
    = f.submit 'Save', class: 'px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-brandBlack rounded-lg hover:bg-brandGray focus:outline-none focus:ring focus:ring-brandGray focus:ring-opacity-50'
