.relative.rounded-lg.shadow-md.border.border-brandGray.flex.flex-col.gap-3.bg-white
  = link_to '', board_task_path(board.id, task.id), class: 'inset-0 absolute'
  .px-3.py-3.md:px-5.md:py-5
    .flex.items-center
      .space-y-2
        .task-status{ data: { status: task.display_status } }= task.display_status
        %p.text-xl.font-bold.text-brandBlack= task.name
      - if user_signed_in? && task.user == current_user
        .ml-auto
          = render 'commons/dropdown_actions',
                   edit_path: edit_board_task_path(board, task),
                   delete_path: board_task_path(board, task)
    .flex.items-center.gap-1.justify-between.mt-4
      = image_tag task.user.avatar_image, class: 'shrink-0 size-8 rounded-full'
      .flex.items-center.gap-2
        .flex.items-center.gap-1.shrink-0
          - task.comment_users.each do |user|
            = image_tag user.avatar_image, class: 'shrink-0 size-6 rounded-full'
        .flex.items-center.gap-1.shrink-0
          = image_tag 'icon_comment.svg', class: 'shrink-0 size-5'
          = task.comments_count
